script PalletTown_StartRivalBattle {
    if (!(flag(FLAG_0x305))){
        setflag(FLAG_0x304)
    }
   else{
    clearflag(FLAG_0x304)
   }
}


script RivalBattle1{
        trainerbattle_single(TRAINER_RIVAL1, Rival1_Intro, Rival1_Outro)
    msgbox(PostBattle_Rival1, MSGBOX_AUTOCLOSE)
    waitmessage
    end
}

